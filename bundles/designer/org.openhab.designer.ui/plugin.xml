<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.openhab.designer.ui.internal.application.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.openhab.designer.ui.internal.perspectives.Perspective"
            fixed="false"
            id="org.openhab.designer.ui.perspective"
            name="openHAB Perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               ratio="0.3"
               id="org.openhab.designer.ui.ItemView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.openhab.designer.ui.ItemView"
               relationship="top"
               ratio="0.4"
               id="org.openhab.designer.ui.ConfigView">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="right"
               ratio="0.6"
               id="org.eclipse.ui.browser.view">
         </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="*">
         <view
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               ratio="0.7"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               standalone="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="org.openhab.designer.ui.menus.sampleMenu"
               label="Sample Menu"
               mnemonic="M">
            <command
                  commandId="org.openhab.designer.ui.commands.sampleCommand"
                  id="org.openhab.designer.ui.menus.sampleCommand"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="org.openhab.designer.ui.toolbars.sampleToolbar">
            <command
                  commandId="org.openhab.designer.ui.commands.sampleCommand"
                  icon="icons/sample.gif"
                  id="org.openhab.designer.ui.toolbars.sampleCommand"
                  tooltip="Say hello world">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="openHAB Views"
            id="org.openhab.designer.ui">
      </category>
      <view
            category="org.openhab.designer.ui"
            class="org.openhab.designer.ui.internal.views.ItemView"
            icon="icons/items.png"
            id="org.openhab.designer.ui.ItemView"
            name="Items">
      </view>
      <view
            category="org.openhab.designer.ui"
            class="org.openhab.designer.ui.internal.views.ConfigNavigator"
            icon="icons/configure.png"
            id="org.openhab.designer.ui.ConfigView"
            name="Configurations">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="org.openhab.designer.ui.ConfigView">
         <includes>
            <actionExtension
                  pattern="org.openhab.designer.ui.navigator.actions.*">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerContentBinding
            viewerId="org.openhab.designer.ui.ConfigView">
         <includes>
            <contentExtension
                  isRoot="true"
                  pattern="org.openhab.designer.ui.*">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewer
            viewerId="org.openhab.designer.ui.ConfigView">
         <popupMenu
               allowsPlatformContributions="false">
            <insertionPoint
                  name="group.open"
                  separator="false">
            </insertionPoint>
            <insertionPoint
                  name="group.openWith">
            </insertionPoint>
            <insertionPoint
                  name="separator"
                  separator="true">
            </insertionPoint>
            <insertionPoint
                  name="group.edit">
            </insertionPoint>
         </popupMenu>
      </viewer>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.openhab.designer.ui.internal.views.ViewContentProvider"
            icon="icons/configure.png"
            id="org.openhab.designer.ui.navigator.configuration"
            labelProvider="org.openhab.designer.ui.internal.views.ViewLabelProvider"
            name="openHAB Configuration"
            priority="highest"
            providesSaveables="true">
         <triggerPoints>
            <instanceof
                  value="org.eclipse.core.resources.IProject">
            </instanceof>
         </triggerPoints>
         <commonSorter
               class="org.openhab.designer.ui.internal.views.NameSorter">
         </commonSorter>
      </navigatorContent>
      <actionProvider
            class="org.eclipse.ui.internal.navigator.resources.actions.EditActionProvider"
            id="org.openhab.designer.ui.navigator.actions.edit">
         <enablement>
            <instanceof
                  value="org.eclipse.core.resources.IFile">
            </instanceof>
         </enablement>
      </actionProvider>
      <actionProvider
            class="org.eclipse.ui.internal.navigator.resources.actions.OpenActionProvider"
            id="org.openhab.designer.ui.navigator.actions.open">
         <enablement>
            <instanceof
                  value="org.eclipse.core.resources.IFile">
            </instanceof>
         </enablement>
      </actionProvider>
   </extension>

</plugin>
