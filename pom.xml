			<layout>p2</layout>
			<url>http://download.eclipse.org/releases/helios</url>
		</repository>
		<repository>
			<id>Eclipse Helios TMF</id>
			<layout>p2</layout>
			<url>http://download.itemis.com/updates/milestones/</url>
		</repository>
		<repository>
			<id>Eclipse Orbit</id>
			<layout>p2</layout>
			<url>http://download.eclipse.org/tools/orbit/downloads/drops/R20100114021427/updateSite/</url>
		</repository>
		<repository>
      <id>OPS4j</id>
      <url>http://repository.ops4j.org/maven2</url>
    </repository>
	</repositories>

